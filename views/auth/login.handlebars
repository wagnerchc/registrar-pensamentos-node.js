<div class="row justify-content-center align-items-center my-5">
    <div class="col-auto">
        <h1>Entrar</h1>
    </div>
</div>
<div class="row justify-content-center align-items-center">
    <div class="col-10 col-md-8 col-lg-6">
        <form action="/login" method="POST">
            <div class="my-3">
                <label for="email" class="form-label fw-bold">Email:</label>
                <input type="email" class="form-control shadow border border-warning" name="email" id="email" placeholder="Digite seu email" required>
            </div>
            <div class="my-3">
                <label for="password" class="form-label fw-bold">Senha:</label>
                <input type="password" class="form-control shadow border border-warning fs-6 text-wrap" name="password" id="password" placeholder="Digite uma senha" required>
            </div>
            <div class="my-3">
                <div class="row justify-content-center align-items-center my-4">
                    <div class="col-6 col-md-4">
                        <input type="submit" class="btn btn-dark shadow w-100" value="Entrar">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>