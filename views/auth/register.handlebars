<div class="row justify-content-center align-items-center my-5">
    <div class="col-auto">
        <h1>Registrar</h1>
    </div>
</div>
<div class="row justify-content-center align-items-center">
    <div class="col-10 col-md-8 col-lg-6">
        <form action="/register" method="POST">
            <div class="my-3">
                <label for="name" class="form-label fw-bold">Nome:</label>
                <input type="text" class="form-control shadow border border-warning" name="name" id="name" placeholder="Digite seu nome" required>
            </div>
            <div class="my-3">
                <label for="email" class="form-label fw-bold">Email:</label>
                <input type="email" class="form-control shadow border border-warning" name="email" id="email" placeholder="Digite seu email" required>
            </div>
            <div class="my-3">
                <label for="password" class="form-label fw-bold">Senha:</label>
                <input type="password" class="form-control shadow border border-warning fs-6 text-wrap" name="password" id="password" placeholder="Digite uma senha" required>
            </div>
            <div class="my-3">
                <label for="confirmpassword" class="form-label fw-bold">Confirme a Senha:</label>
                <input type="password" class="form-control shadow border border-warning" name="confirmpassword" id="confirmpassword" placeholder="Confirme a senha" required>
            </div>
            <div class="my-3">
                <div class="row justify-content-center align-items-center my-4">
                    <div class="col-6 col-md-4">
                        <input type="submit" class="btn btn-dark shadow w-100" value="Cadastrar">
                    </div>
                </div>
            </div>
        </form>
        <div class="my-3">
            <a href="/login" class="text-decoration-none fw-bold text-secondary">JÃ¡ tenho conta</a>
        </div>
    </div>
</div>